<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaiTap_1d"
    android:background="#A031AA52">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="123dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="123dp"
        android:gravity="center_horizontal" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:id="@+id/et1"
        android:hint="Name"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="40dp"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10px"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10px"></EditText>
    <EditText
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:id="@+id/et2"
        android:hint="Phone"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        android:layout_marginTop="50px"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="@+id/et1"
        app:layout_constraintEnd_toEndOf="@+id/et1"></EditText>
    <EditText
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:id="@+id/et3"
        android:hint="Email"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        android:layout_marginTop="50px"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="@+id/et2"
        app:layout_constraintEnd_toEndOf="@+id/et2"></EditText>
    <EditText
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:id="@+id/et4"
        android:hint="Password"
        android:drawableRight="@drawable/eye"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et3"
        android:layout_marginTop="50px"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="@+id/et3"
        app:layout_constraintEnd_toEndOf="@+id/et3"></EditText>
    <EditText
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:id="@+id/et5"
        android:hint="Birthday"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et4"
        android:layout_marginTop="50px"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="@+id/et1"
        app:layout_constraintEnd_toEndOf="@+id/et1"></EditText>
    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/et5"
        android:layout_marginTop="50px"
        app:layout_constraintStart_toStartOf="@+id/et5"
        app:layout_constraintEnd_toEndOf="@+id/et5"
        >

        <RadioButton
            android:id="@+id/rdb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18dp"
        ></RadioButton>
        <RadioButton
            android:id="@+id/rdb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18dp"
            ></RadioButton>
    </RadioGroup>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="330dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/rg1"
        android:layout_marginTop="40px"
        android:backgroundTint="#E53935"
        android:text="REGISTER"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/rg1"
        app:layout_constraintEnd_toEndOf="@+id/rg1"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you agree to terms and conditions"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        android:layout_marginTop="30px"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister"
        android:gravity="center_horizontal"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>